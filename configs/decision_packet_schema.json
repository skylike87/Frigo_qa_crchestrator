{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "DecisionPacket",
  "type": "object",
  "required": [
    "approved_testcase_bundle",
    "pii_masking_rules",
    "guardrail_filter_result"
  ],
  "properties": {
    "approved_testcase_bundle": {
      "description": "Final approved testcase set after decision step"
    },
    "pii_masking_rules": {
      "type": "array",
      "items": { "type": "string" }
    },
    "guardrail_filter_result": {
      "type": "object",
      "required": ["status"],
      "properties": {
        "status": {
          "type": "string",
          "enum": ["PASS", "BLOCK"]
        },
        "shape_errors": {
          "type": "array",
          "items": { "type": "string" }
        },
        "pii_findings": {
          "type": "array",
          "items": { "type": "string" }
        },
        "final_filtered_at_utc": {
          "type": "string"
        }
      }
    }
  }
}
