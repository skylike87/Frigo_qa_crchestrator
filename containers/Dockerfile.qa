FROM mcr.microsoft.com/playwright:v1.52.0-jammy

ENV DEBIAN_FRONTEND=noninteractive
ENV FLUTTER_HOME=/opt/flutter
ENV PATH="${FLUTTER_HOME}/bin:${FLUTTER_HOME}/bin/cache/dart-sdk/bin:${PATH}"

RUN apt-get update \
  && apt-get upgrade -y \
  && apt-get install -y --no-install-recommends \
    ca-certificates \
    curl \
    git \
    unzip \
    xz-utils \
    zip \
    python3 \
    python3-pip \
  && rm -rf /var/lib/apt/lists/*

# Install uv and provision Python 3.12-only env for mistral-vibe.
RUN curl -LsSf https://astral.sh/uv/install.sh | sh \
  && export PATH="/root/.local/bin:${PATH}" \
  && uv python install 3.12 \
  && uv venv --python 3.12 /opt/vibe-venv \
  && /opt/vibe-venv/bin/python -m ensurepip --upgrade \
  && /opt/vibe-venv/bin/python -m pip install --upgrade pip \
  && /opt/vibe-venv/bin/python -m pip install mistral-vibe \
  && ln -sf /opt/vibe-venv/bin/vibe /usr/local/bin/vibe

# Install OpenAI Codex CLI for test script generation steps.
RUN npm install -g @openai/codex \
  && codex --version

RUN git clone --depth 1 --branch stable https://github.com/flutter/flutter.git "${FLUTTER_HOME}" \
  && flutter --version \
  && dart --version

WORKDIR /workspace
